<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center">


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:text="Please choose an account type"
        android:layout_marginTop="50dp"
        android:fontFamily="serif"
        android:textColor="#DB4D4D"
        android:textSize="25sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/adminButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#DB4D4D"
        android:onClick="onAdmin"
        android:text="Admin" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="75dp" />

    <Button
        android:id="@+id/cyclingClubButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#DB4D4D"
        android:onClick="onCyclingClub"
        android:text="Cycling Club" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="75dp" />

    <Button
        android:id="@+id/participantButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#DB4D4D"
        android:onClick="onParticipant"
        android:text="Participant" />

</LinearLayout>
