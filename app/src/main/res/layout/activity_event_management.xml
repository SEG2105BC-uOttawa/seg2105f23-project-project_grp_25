<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7ce85"
    tools:context=".EventManagement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/hill_climb_png"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/eventtype" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Group Rides"
            android:gravity="center"
            android:fontFamily="@font/sigmarone"
            android:textColor="#DB4D4D"
            android:textSize="25sp" />


        <Button
            android:id="@+id/select0"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#db6d00"
            android:onClick="onSelectGroupRides"
            android:text="Select" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Hill Climb"
            android:gravity="center"
            android:fontFamily="@font/sigmarone"
            android:textColor="#DB4D4D"
            android:textSize="25sp" />


        <Button
            android:id="@+id/select1"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#db6d00"
            android:onClick="onSelectHillClimb"
            android:text="Select" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Road Race"
            android:gravity="center"
            android:fontFamily="@font/sigmarone"
            android:textColor="#DB4D4D"
            android:textSize="25sp" />


        <Button
            android:id="@+id/select2"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#db6d00"
            android:onClick="onSelectRoadRace"
            android:text="Select" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Road Stage Race"
            android:gravity="center"
            android:fontFamily="@font/sigmarone"
            android:textColor="#DB4D4D"
            android:textSize="25sp" />


        <Button
            android:id="@+id/select3"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#db6d00"
            android:onClick="onSelectRoadStageRace"
            android:text="Select" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


    </LinearLayout>

</RelativeLayout>